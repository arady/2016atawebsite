<!DOCTYPE html>
<html>
<head>
  <title>Traditional ATA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="member_navigation">
  <%= image_tag('logo.png') %>
  <h2>Traditional ATA Member Site</h2>
</div>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Members</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home<span class="sr-only">(current)</span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">White - Yellow <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Songahm One</a></li>
            <li><a href="#">Songahm Two</a></li>
            <li><a href="#">Songahm three</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Camo - Blue<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Songahm Four</a></li>
            <li><a href="#">Songahm Five</a></li>
            <li><a href="#">Inwha One</a></li>
            <li><a href="#">Inwha Two</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Brown - Red<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Choonjung One</a></li>
            <li><a href="#">Choonjung Two</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

<footer>
  <div class="footer_logo">
    <%= image_tag("logo.png", :class => "mini_logo") %>
  </div>
  <div class="site_map">
    <h3>Site map</h3>
  </div>
  <div class="resources">
    <h3>Resources</h3>
    <ul>
      <li><a href="#">Schedule</a></li>
      <li><a href="#">Blue Sheet</a></li>
      <li><a href="#">Gold Sheet</a></li>
  </div>
  <div class="social_media">
    <%= image_tag("social_media_icons/fb_small.png") %>
    <%= image_tag("social_media_icons/twitter.png") %>
    <%= image_tag("social_media_icons/youtube.png") %>
  </div>
</footer>

</body>
</html>
